<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:background="@drawable/txt_bottom_border"
    android:foreground="?attr/selectableItemBackground">

    <TextView
        android:id="@+id/txt_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2021-10-14"
        android:textColor="#797E86"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/layout_attendance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4.5dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/txt_date">

        <TextView
            android:id="@+id/txt_attendance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="@string/go_work_time"
            android:textColor="#B7BBC8"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txt_attendance_dateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="2021-10-14 09:18:53"
            android:textColor="#797E86"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_leaveWork"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/layout_attendance">

        <TextView
            android:id="@+id/txt_leaveWork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="@string/leave_work_time"
            android:textColor="#B7BBC8"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txt_leaveWork_dateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="2021-10-14 18:27:31"
            android:textColor="#797E86"
            android:textSize="14sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>