<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_background_shape"
    android:paddingStart="20dp"
    android:paddingTop="19dp"
    android:paddingEnd="20dp"
    android:paddingBottom="16dp">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="left"
        android:text="@string/select"
        android:textColor="#06060A"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_cancel1"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:background="@drawable/circle_button"
        android:foreground="@drawable/icon_cancel_02"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/layout_content1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="12dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_title">

        <LinearLayout
            android:id="@+id/layout_content2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:drawableStart="@drawable/icon_camera_resize"
                android:drawablePadding="8dip"
                android:drawableTint="#9EA4AE"
                android:gravity="center_vertical"
                android:paddingStart="10dip"
                android:paddingEnd="0dp"
                android:text="@string/isueSelect_img"
                android:textColor="#3A3B41"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_gallery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:drawableStart="@drawable/icon_gallery_resize"
                android:drawablePadding="10dip"
                android:drawableTint="#9EA4AE"
                android:gravity="center_vertical"
                android:paddingStart="12dip"
                android:paddingEnd="0dp"
                android:text="@string/isueSelect_gallery"
                android:textColor="#3A3B41"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_AR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:drawableStart="@drawable/icon_ar_resize"
                android:drawablePadding="8dip"
                android:drawableTint="#9EA4AE"
                android:gravity="center_vertical"
                android:paddingStart="10dip"
                android:paddingEnd="0dp"
                android:text="@string/isueSelect_AR"
                android:textColor="#3A3B41"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>